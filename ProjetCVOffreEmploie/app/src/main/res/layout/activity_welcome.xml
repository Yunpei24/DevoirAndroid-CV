<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond3"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">


        <TextView
            style="@style/headerTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bienvenu Sur notre Plateforme"
            android:textSize="28dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Postulez Ã  des Offres d'emploie en Vous Inscrivant"
            android:textSize="28dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_1"
            android:layout_gravity="center_horizontal"/>
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
                <Button
                    style="@style/parent"
                    android:id="@+id/offreButton"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:text="Offres"
                    android:textStyle="bold"
                />
                <Button
                    style="@style/parent"
                    android:id="@+id/viewCvButton"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:text="Visualiser CV"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>